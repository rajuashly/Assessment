@model Express.Models.WayBill

@{
    ViewData["Title"] = "Create";
}

<h4>Create WayBill</h4>
<hr />

<form asp-action="Create">
    <span class="help-block">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </span>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="AssignedToVehicleId" class="control-label"></label>
                <select asp-for="AssignedToVehicleId"  class="form-control" asp-items="ViewBag.AssignedToVehicleId"></select>
                <span asp-validation-for="AssignedToVehicleId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="VehicleStartsFrom" class="control-label required"></label>
                <input asp-for="VehicleStartsFrom" class="form-control" placeholder="Enter Where Vehicle Starts From" />
                <span asp-validation-for="VehicleStartsFrom" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Destination" class="control-label required"></label>
                <input asp-for="Destination" class="form-control" />
                <span asp-validation-for="Destination" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input type="date" asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="ParcelCount" class="control-label required"></label>
                <input asp-for="ParcelCount" class="form-control" placeholder="Enter Number of Parcels" />
                <span asp-validation-for="ParcelCount" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="TotalWeight" class="control-label  required"></label>
                <input asp-for="TotalWeight" class="form-control" placeholder="Enter Weight in KGS" />
                <span asp-validation-for="TotalWeight" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="ContentDescription" class="control-label required"></label>
                <textarea rows="6" asp-for="ContentDescription" class="form-control" placeholder="Enter Vehicle Destination"></textarea>
                <span asp-validation-for="ContentDescription" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"  />
            </div>
        </div>
    </div>
</form>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
